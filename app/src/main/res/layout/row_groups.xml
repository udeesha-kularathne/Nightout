<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="3dp">


        <RelativeLayout
            android:id="@+id/Card1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="16dp">

            <ImageView
                android:id="@+id/gProfileIv"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@mipmap/app_icon1" />

            <TextView
                android:id="@+id/gNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@id/gProfileIv"
                android:text="Group 1"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/gCategoryTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/gNameTv"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/gProfileIv"
                android:text="Group About Something"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/gDescrpTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/gCategoryTv"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/gProfileIv"
                android:text="Group About Something"
                android:textColor="@color/colorPrimary" />
        </RelativeLayout>

</androidx.cardview.widget.CardView>